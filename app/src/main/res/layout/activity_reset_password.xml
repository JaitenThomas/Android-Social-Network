<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".ResetPasswordActivity">

    <include
        android:id="@+id/forget_password_toolbar"
        layout="@layout/app_bar_layout" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:gravity="center_horizontal"
        android:text="We will mail you a link after you when provide email and click the send button. Please click on that link to reset your password."
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_toolbar"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/reset_password_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="write your email here..."
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:background="@drawable/inputs"
        android:padding="12dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

         />

    <Button
        android:id="@+id/reset_email_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Send Mail"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_email"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"

        />

</android.support.constraint.ConstraintLayout>